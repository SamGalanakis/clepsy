{
	"name": "Existing Dockerfile",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"shutdownAction": "stopCompose",
	"service": "clepsy",
	"runServices": [
		"clepsy",
		"valkey",
		"dramatiq-worker",
		"valkey-exporter",
		"prometheus",
		"grafana"
	],
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"workspaceFolder": "/app",
	"remoteUser": "appuser",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"tamasfe.even-better-toml",
				"ms-azuretools.vscode-docker",
				"charliermarsh.ruff",
				"Boundary.baml-extension",
				"ms-python.pylint"
			],
			"settings": {
				"python.defaultInterpreterPath": "/venv/bin/python"
			}
		}
	},
	"postCreateCommand": "",
	"postStartCommand": "bash .devcontainer/post_start.sh ${localWorkspaceFolderBasename}",
	"initializeCommand": ""
}
